{
  "compilerOptions": {
    "strict": true,
    "module": "nodenext",
    "noEmit": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "useUnknownInCatchVariables": false,
    "moduleDetection": "force"
  }
}
